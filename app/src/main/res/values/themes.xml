<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EjemploMovil" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EjemploMovil.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EjemploMovil.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="tint">@color/white</item>
        <item name="tintMode">multiply</item>
    </style>

    <style name="Theme.EjemploMovil.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>